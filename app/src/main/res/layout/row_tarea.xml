<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#2d2929"
    android:layout_marginTop="4dp"
    android:layout_height="100dp"

    android:weightSum="1">
<View
    android:layout_gravity="left"
    android:layout_width="30dp"
    android:background="@color/rojo"
    android:layout_height="100dp"
    android:id="@+id/View_estado_tarea">

</View>
    <TextView
        android:layout_width="42dp"
        android:layout_height="match_parent"
        android:text="id"
        android:gravity="center"
        android:id="@+id/textView_id_tarea"
        android:textColor="#fffdfd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="descripcion"
        android:gravity="center"
        android:id="@+id/textView_descripcion_tarea"
        android:layout_weight="0.65"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="hora"
        android:id="@+id/textView_hora_tarea"
        android:layout_weight="0.13"
        android:textColor="#ffffff" />
    <LinearLayout
        android:layout_width="50dp"
       android:gravity="center"
        android:layout_height="match_parent">
        <View
            android:layout_width="10dp"
            android:background="@color/azul"
            android:layout_height="10dp"
            android:id="@+id/View_estado_sincronizacion_tarea">

        </View>

    </LinearLayout>


</LinearLayout>